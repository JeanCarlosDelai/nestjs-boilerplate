{
  "name": "nestjs-boilerplate",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write src/**/*.ts",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main.js",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "prepare": "husky",
    "sonar": "node dist/main.js",
    "test:type": "tsc --noEmit",
    "test": "npm run test:type && npm run test:unit && npm run test:integration && npm run test:e2e",
    "test:unit": "vitest run --config ./test/vitest.unit.mts",
    "test:watch": "vitest --config ./test/vitest.unit.mts",
    "test:cov": "vitest run --coverage --config ./test/vitest.unit.mts",
    "test:debug": "vitest --inspect-brk --inspect --logHeapUsage --threads=false --config ./test/vitest.unit.mts",
    "test:integration": "vitest run --config ./test/vitest.integration.mts",
    "test:e2e": "vitest run --config ./test/vitest.e2e.mts",
    "test:mutation": "npx stryker run"
  },
  "dependencies": {
    "@nestjs/common": "^11.0.12",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.0.12",
    "@nestjs/platform-express": "^11.0.12",
    "@nestjs/swagger": "^11.1.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "dotenv": "^16.4.7",
    "jest": "^29.7.0",
    "nest-winston": "^1.10.2",
    "nestjs-boilerplate": "file:",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "winston": "^3.17.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
    "@nestjs/cli": "^11.0.5",
    "@nestjs/schematics": "^11.0.2",
    "@nestjs/testing": "^11.0.12",
    "@stryker-mutator/vitest-runner": "^8.7.1",
    "@types/express": "^5.0.1",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.13.14",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.29.0",
    "@typescript-eslint/parser": "^8.29.0",
    "@vitest/coverage-v8": "^3.1.1",
    "eslint": "^9.23.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-no-relative-import-paths": "^1.6.1",
    "eslint-plugin-prettier": "^5.2.5",
    "eslint-plugin-project-structure": "^3.13.3",
    "husky": "^9.1.7",
    "prettier": "^3.5.3",
    "sonarqube-scanner": "^4.3.0",
    "source-map-support": "^0.5.21",
    "supertest": "^7.1.0",
    "ts-jest": "^29.3.1",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.2",
    "unplugin-swc": "^1.5.1",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.1.1"
  }
}
